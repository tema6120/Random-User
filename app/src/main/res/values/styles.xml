<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UserProfileFieldLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="UserProfileField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/user_profile_field</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>